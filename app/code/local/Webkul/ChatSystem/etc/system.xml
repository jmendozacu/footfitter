<?xml version="1.0"?>
<config>
    <tabs>
        <webkul>
            <label>&lt;a href="http://www.webkul.com" style="background:none;" target="_blank"&gt;WEBKUL&lt;img height="10" style="margin-left: 10px;" src='http://webkul.com/blog/wp-content/uploads/2013/09/wklogo.png'/&gt;&lt;/a&gt;</label>
            <sort_order>1</sort_order>
        </webkul>
    </tabs>
    <sections>
        <chatsystem>
            <label>Chat System</label>
            <tab>webkul</tab>
            <sort_order>130</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <chatsystem>
                    <label>Parameters</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
					<fields>
                        <host>
                            <label>Host Name</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>required-entry</validate>
                            <tooltip>Enter Host Name</tooltip>
                        </host>
                        <port>
                            <label>Port Number</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <validate>required-entry</validate>
                            <show_in_store>1</show_in_store>
                            <tooltip>Enter Port Number</tooltip>
                        </port>

						<startserver translate="label">
                            <frontend_type>button</frontend_type>
                            <frontend_model>chatsystem/adminhtml_system_config_form_startButton</frontend_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                        </startserver>
                        <endserver translate="label">
                            <frontend_type>button</frontend_type>
                            <frontend_model>chatsystem/adminhtml_system_config_form_endButton</frontend_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                        </endserver>
                        <adminname>
                            <label>Admin name for mails</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <validate>required-entry</validate>
                            <show_in_store>1</show_in_store>
                            <tooltip>Enter Admin name for mail</tooltip>
                        </adminname>
                        <loadertext>
                            <label>Text at Loading Page</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <tooltip>Please Enter text for loading page..</tooltip>
                        </loadertext>
                        <serverstatus>
                            <frontend_type>hidden</frontend_type>
                            <sort_order>15</sort_order>
                        </serverstatus>
					</fields>
				</chatsystem>
			</groups>
        </chatsystem>
    </sections>
</config>
