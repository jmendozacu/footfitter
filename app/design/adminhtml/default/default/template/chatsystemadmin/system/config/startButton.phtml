    //<![CDATA[
    function start() {
        var host = document.getElementById('chatsystem_chatsystem_host').value;
        var port = document.getElementById('chatsystem_chatsystem_port').value;
        new Ajax.Request('<?php echo $this->getAjaxCheckUrl() ?>', {
            method:     'get',
            parameters: {
                'host':host,
                'port':port
            },
            onSuccess: function(transport){
                if (transport.responseText){
                    // console.log(transport.responseText);
                    document.getElementById('chatsystem_start').hide();
                    document.getElementById('chatsystem_end').show();
                }
            }
        });
    }
    //]]>
</script>
