<script type="text/javascript">
	jQuery.noConflict();
    jQuery(document).ready(function(){

        var status = "<?php echo Mage::getStoreConfig("chatsystem/chatsystem/serverstatus"); ?>";
        if(status == "start") {
            jQuery("#chatsystem_start").hide();
        } else if(status == "stop") {
            jQuery("#chatsystem_end").hide();
        } else {
            jQuery("#chatsystem_end").hide();
        }

    });
</script>
